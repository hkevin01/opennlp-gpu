{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üî® Maven Clean Compile",
      "type": "shell",
      "command": "mvn",
      "args": [
        "clean",
        "compile"
      ],
      "group": "build",
      "options": {
        "env": {
          "JAVA_HOME": "/usr/lib/jvm/java-21-openjdk-amd64",
          "PATH": "/usr/lib/jvm/java-21-openjdk-amd64/bin:${env:PATH}"
        }
      },
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "label": "üß™ Run Demo Tests",
      "type": "shell",
      "command": "mvn",
      "args": [
        "test",
        "-Dtest=GpuDemoApplication"
      ],
      "group": "test",
      "options": {
        "env": {
          "JAVA_HOME": "/usr/lib/jvm/java-21-openjdk-amd64",
          "PATH": "/usr/lib/jvm/java-21-openjdk-amd64/bin:${env:PATH}"
        }
      },
      "dependsOn": "üî® Maven Clean Compile"
    },
    {
      "label": "üìã Run All Demos",
      "type": "shell",
      "command": "./scripts/run_all_demos.sh",
      "group": "test",
      "options": {
        "env": {
          "JAVA_HOME": "/usr/lib/jvm/java-21-openjdk-amd64",
          "PATH": "/usr/lib/jvm/java-21-openjdk-amd64/bin:${env:PATH}"
        }
      }
    },
    {
      "label": "üîß Check IDE Setup",
      "type": "shell",
      "command": "./scripts/check_ide_setup.sh",
      "group": "build"
    },
    {
      "label": "‚òï Validate Java Runtime",
      "type": "shell",
      "command": "./scripts/validate_java_runtime.sh",
      "group": "build"
    },
    {
      "label": "üõ°Ô∏è Fix Java Environment",
      "type": "shell",
      "command": "./scripts/fix_java_environment.sh",
      "group": "build"
    },
    {
      "label": "üîç GPU Diagnostics Check",
      "type": "shell",
      "command": "mvn",
      "args": [
        "exec:java",
        "-Dexec.mainClass=org.apache.opennlp.gpu.tools.GpuDiagnostics"
      ],
      "group": "test",
      "options": {
        "env": {
          "JAVA_HOME": "/usr/lib/jvm/java-21-openjdk-amd64",
          "PATH": "/usr/lib/jvm/java-21-openjdk-amd64/bin:${env:PATH}"
        }
      },
      "dependsOn": "üî® Maven Clean Compile",
      "problemMatcher": []
    },
    {
      "label": "ü§ñ Start GitHub Copilot Agent Mode",
      "type": "shell",
      "command": "code",
      "args": [
        "--command",
        "github.copilot.chat.openNewChat"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "üîÑ Quick Agent Continue",
      "type": "shell",
      "command": "echo",
      "args": [
        "continue"
      ],
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}