{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch Main",
            "request": "launch",
            "mainClass": "com.example.Main",
            "projectName": "${workspaceFolderBasename}"
        },
        {
            "type": "java",
            "name": "Launch GPU Demo",
            "request": "launch",
            "mainClass": "org.apache.opennlp.gpu.GpuDemoMain",
            "projectName": "opennlp-gpu"
        },
        {
            "type": "java",
            "name": "List GPU Devices",
            "request": "launch",
            "mainClass": "org.apache.opennlp.gpu.GpuDemoMain",
            "projectName": "opennlp-gpu",
            "args": [
                "--list-devices"
            ]
        },
        {
            "type": "java",
            "name": "Run Benchmark (Auto)",
            "request": "launch",
            "mainClass": "org.apache.opennlp.gpu.GpuDemoMain",
            "projectName": "opennlp-gpu",
            "args": [
                "--benchmark"
            ]
        },
        {
            "type": "java",
            "name": "Run Benchmark (CUDA)",
            "request": "launch",
            "mainClass": "org.apache.opennlp.gpu.GpuDemoMain",
            "projectName": "opennlp-gpu",
            "args": [
                "--benchmark",
                "--cuda"
            ]
        },
        {
            "type": "java",
            "name": "Run Benchmark (ROCm)",
            "request": "launch",
            "mainClass": "org.apache.opennlp.gpu.GpuDemoMain",
            "projectName": "opennlp-gpu",
            "args": [
                "--benchmark",
                "--rocm"
            ]
        },
        {
            "type": "java",
            "name": "Run Benchmark (OpenCL)",
            "request": "launch",
            "mainClass": "org.apache.opennlp.gpu.GpuDemoMain",
            "projectName": "opennlp-gpu",
            "args": [
                "--benchmark",
                "--opencl"
            ]
        }
    ]
}